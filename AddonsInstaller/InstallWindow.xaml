<Window x:Class="AddonsInstaller.InstallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonsInstaller"
        mc:Ignorable="d"
        Title="Install" Height="176" Width="309" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="AddonNameTxt" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Loading versions of"/><Run Text=" ADDON NAME"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,31,0,0" TextWrapping="Wrap" Text="Select version" VerticalAlignment="Top"/>
        <ComboBox x:Name="VersionSelect" Margin="10,52,10,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="Progress" Margin="10,79,10,0" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="InstallBtn" Content="Install" Margin="10,107,10,0" Height="22" VerticalAlignment="Top" Click="InstallBtn_Click"/>

    </Grid>
</Window>
