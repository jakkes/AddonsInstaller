<Window x:Class="AddonsInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonsInstaller"
        mc:Ignorable="d"
        Title="AddonsInstaller | Start" Height="160.604" Width="355.432"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" Text="Welcome, first we need to locate your World of Warcraft game folder. It should look something like this:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,47,0,0" TextWrapping="Wrap" Text="C:\Program Files\World of Warcraft" VerticalAlignment="Top"/>
        <TextBox x:Name="PathTxt" Height="20" Margin="10,68,90,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="BrowseBtn" Content="Browse" Margin="262,68,10,0" VerticalAlignment="Top" Click="BrowseBtn_Click"/>
        <Button x:Name="FindBtn" Content="Find automatically" Margin="10,93,176,0" VerticalAlignment="Top" Click="FindBtn_Click"/>
        <Button x:Name="ContinueBtn" Content="Continue" Margin="176,93,10,0" VerticalAlignment="Top" Click="ContinueBtn_Click"/>

    </Grid>
</Window>
