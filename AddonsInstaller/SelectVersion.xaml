<Window x:Class="AddonsInstaller.SelectVersion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonsInstaller"
        mc:Ignorable="d"
        Title="Select game version" Height="141.401" Width="283.787" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Please select the game version you wish to work with"/><Run Text=":"/></TextBlock>
        <ComboBox x:Name="Selector" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Width="256">
        </ComboBox>
        <Button x:Name="ContinueBtn" Content="Continue" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Width="256" Click="ContinueBtn_Click"/>

    </Grid>
</Window>
